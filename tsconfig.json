{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "experimentalDecorators": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true, // Necessary for default importing Phaser to pick up types properly
    "allowJs": true,
    "checkJs": false,
    "lib": ["dom", "esnext"]
  },
  "exclude": ["src/resources/**/*"],
  "include": ["src/**/*", "node_modules/phaser/types"]
}
